{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "url": "{IconPath}",
              "size": "Medium"
            }
          ]
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "size": "Large",
              "weight": "Bolder",
              "text": "{Title}"
            },
            {
              "type": "TextBlock",
              "text": "{Type}"
            },
            {
              "type": "TextBlock",
              "text": "{Score}"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "{Description}",
          "wrap": true
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "{Title_View}",
      "url": "{Link_View}"
    },
    {
      "type": "Action.OpenUrl",
      "title": "{Title_Trailers}",
      "url": "{Link_Trailers}"
    },
    {
      "type": "Action.OpenUrl",
      "title": "{Title_Trivia}",
      "url": "{Link_Trivia}"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}